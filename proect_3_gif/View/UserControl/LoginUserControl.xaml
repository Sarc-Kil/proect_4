<UserControl x:Class="proect_3_gif.View.UserControl.LoginUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:proect_3_gif.View.UserControl"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"        
             Height="450"
             Width="700"
             Background="Transparent"
             FontFamily="Monotype Corsiva">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Border Height="100"
                 Width="300"
                 Margin="0 0 30 0"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Center"
                 Background="Black"
                 BorderBrush="#171717"
                 BorderThickness="2"
                 CornerRadius="30">
            <Border 
                    Height="90"
                    Width="290"
                    Margin="0 0 0 0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="1.5"
                    CornerRadius="25">

                <Grid>

                    <TextBlock Text="Созданая в бездне практическая работа № 4 с SQlite"
                               FontSize="23"
                               Grid.Row="0"
                               Foreground="Black"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0 0 0 0 "
                               Effect="{StaticResource MaterialDesignElevationShadow16}"/> 
                        
                </Grid>
            </Border>
        </Border>
        <Border Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Row="1"
                        Grid.Column="1"
                        Margin="0 0 0 0 "
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Height="300"
                        Width="300"
                        CornerRadius="25"
                        Background="White"
                        Padding="10"
                        BorderBrush="Black"
                        BorderThickness="2"
                        Effect="{StaticResource MaterialDesignElevationShadow12}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Effect="{StaticResource MaterialDesignElevationShadow24}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseDirectlyOver" Value="True">
                                            <Setter Property="BorderBrush" Value="Black"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                            <Setter Property="CornerRadius" Value="25"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Image gif:ImageBehavior.AnimatedSource="/Images/made-in-abyss-faputa.gif" 
                                   Width="124"
                                   Height="86"/>

                            
                        </Border>

                        <StackPanel Grid.Row="1"
                                    HorizontalAlignment="Center">
                            <TextBlock Text="Войти в систему"
                                        HorizontalAlignment="Center"
                                        Foreground="Black"
                                        FontSize="25"
                                        Effect="{StaticResource MaterialDesignElevationShadow16}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="TextDecorations" Value="Underline"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <StackPanel Orientation="Horizontal"
                                        Margin="0 10 0 0">
                                <materialDesign:PackIcon Kind="Idea"
                                      Width="25"
                                      Height="25"
                                      Margin="0 3 3 0"
                                      Foreground="{Binding ElementName= TbLogin, Path=Foreground}"/>
                                <TextBox Width="178"
                                          x:Name="TbLogin"
                                          FontSize="15"
                                          Foreground="Black"
                                          materialDesign:HintAssist.Hint="Введите Фапуту"
                                          materialDesign:TextFieldAssist.UnderlineBrush="Black"
                                          materialDesign:TextFieldAssist.HasClearButton="True"/>

                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                         Margin="0 10 0 0">
                                <materialDesign:PackIcon Kind="Thunder"
                                      Width="25"
                                      Height="25"
                                      Margin="0 3 3 0"
                                      Foreground="{Binding ElementName= TbLogin, Path=Foreground}"/>
                                <PasswordBox Width="178"
                                              x:Name="PbUID"
                                              FontSize="15"
                                              Foreground="Black"
                                              materialDesign:HintAssist.Hint="Введите UID"
                                              materialDesign:TextFieldAssist.UnderlineBrush="Black"
                                              materialDesign:TextFieldAssist.HasClearButton="True"/>

                            </StackPanel>


                            <Button Margin="0 20 0 0 "
                                     x:Name="BtnLogin"
                                     Click="BtnLogin_Click"
                                     Background="Transparent"
                                     BorderBrush="Black"
                                     Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                                     materialDesign:ButtonProgressAssist.Value="-1"
                                    materialDesign:ButtonProgressAssist.IndicatorBackground="#6D6D6D"
                                     materialDesign:ButtonProgressAssist.IndicatorForeground="Black"
                                     materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                                     materialDesign:ButtonProgressAssist.IsIndeterminate="True">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Fishbowl"
                                                              Margin="0 3 3 0 "
                                                              Foreground="{Binding ElementName= BtnLogin, Path=BorderBrush}"/>
                                    <TextBlock Text="В Бездну!"
                                                Foreground="{Binding ElementName= BtnLogin, Path=BorderBrush}"/>
                                </StackPanel>


                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
